@model IEnumerable<BAU.Models.Rotation>

@{
    ViewBag.Title = "RotaionPeriod";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Rotation Period</h2>

<p class="bg-info">
    <text>two week rotaation period which will be equal to 14 days. this will show start and end day of the BAU sceduale</text>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Start_Date)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.End_Date)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Start_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.End_Date)
            </td>

        </tr>
    }

</table>
<input type="button" class="btn btn-info" value="Get Shifts" onclick="location.href='@Url.Action("Index", "Shifts")'" />
<input type="button" class="btn btn-info" value="Add New Rotation Date" onclick="location.href='@Url.Action("Index", "BAU")'" />

